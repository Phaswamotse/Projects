<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/popcorns"
    android:layout_height="match_parent"
    tools:context="com.example.izinjaeats.Check_Order_Cust">

    <Button
        android:id="@+id/View_OrdersBtn"
        android:layout_width="242dp"
        android:layout_height="76dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button2"
        android:text="View My Order Details"
        android:textSize="18sp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/View_OrdersBtn"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_button2"
            >

            <TextView
                android:id="@+id/Orders_Txt11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="You Currently Have No Order"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
        



    </ScrollView>
</RelativeLayout>
